{
  "manifest_version": 3,
  "name": "HireSync",
  "version": "1.0",
  "description": "Track your job applications across multiple platforms",
  "permissions": ["storage", "tabs", "notifications", "identity"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*",
        "*://*.indeed.com/*",
        "*://*.glassdoor.com/*",
        "*://*.ycombinator.com/*"
      ],
      "js": ["contentScript.js"]
    }
  ]
}
